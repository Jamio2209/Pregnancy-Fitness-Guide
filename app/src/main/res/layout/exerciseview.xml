<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_30sdp"
    android:layout_marginLeft="@dimen/_15sdp"
   android:layout_marginRight="@dimen/_15sdp"
    android:elevation="@dimen/_15sdp"

    android:backgroundTint="#98C5E9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="@dimen/_270sdp"
        android:id="@+id/mainlayout">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_22sdp"
            android:id="@+id/imgviews"
            android:layout_margin="@dimen/_10sdp"
            >
            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/demofig"
                android:transitionName="thumb"
                android:id="@+id/pose"

                android:scaleType="centerInside"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toRightOf="@+id/imgviews"
            android:fontFamily="@font/baskvill"
            android:text="Seated Side Band"
            android:textAlignment="center"
            android:textColor="#2B54A4"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:transitionName="title" />

        <ImageView
            android:id="@+id/btnclick"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"

            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/openbtn" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>