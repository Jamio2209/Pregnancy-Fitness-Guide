<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseDetails"
    android:background="#A1DDF7">
    <LinearLayout
        android:layout_width="@dimen/_210sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/details_backbtn"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/backbtn"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/backbtn"
            android:layout_marginBottom="@dimen/_2sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seated Yoga Pose"
            android:textSize="@dimen/_18ssp"
            android:transitionName="title"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_9sdp"
            android:textStyle="bold"
            android:id="@+id/exercise_title"
            android:layout_weight="80"
            android:fontFamily="@font/baskvill"
            android:textColor="#2B54A4"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/pose"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/demofig"
        android:transitionName="thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_205sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/details_info_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/baskvill"
            android:text="Instruction :"

            android:textColor="#2B54A4"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contenttext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_22sdp"
            android:fontFamily="@font/baskvill"

            android:text="1. Sit upright with the legs crossed
                           \n2. Rest your hands on your knees or lap
                           \n3. Keep your spine straight
                           \n4. Close your eyes and breathe deeply"
            android:textColor="#2B54A4"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timertxt"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:alpha="0"
                android:background="@drawable/countbg"
                android:fontFamily="@font/baskvill"
                android:paddingTop="@dimen/_5sdp"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#2B54A4"

                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startbtn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="50"
                android:background="@drawable/statbtnbg"
                android:fontFamily="@font/baskvill"
                android:text="Start"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"
                android:translationX="@dimen/_220sdp" />
        </LinearLayout>




    </LinearLayout>




</RelativeLayout>