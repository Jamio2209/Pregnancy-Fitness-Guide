<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingsbg"
    tools:context=".SettingsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_410sdp"
        android:layout_marginTop="@dimen/_95sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"

            android:orientation="vertical"


            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:background="@drawable/listbg">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/difficult"
                    android:layout_weight="25"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:id="@+id/difficultyicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Difficulty"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/baskvill"
                    android:textColor="#2F54A3"
                    android:layout_weight="50"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/openbtn"
                    android:layout_weight="25"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/difficultybtn"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:background="@drawable/listbg"
                android:layout_marginTop="@dimen/_15sdp">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/alarmicon"
                    android:layout_weight="25"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:id="@+id/alarmicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Reminder"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/baskvill"
                    android:textColor="#2F54A3"
                    android:layout_weight="50"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/openbtn"
                    android:layout_weight="25"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/reminderbtn"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/listbg">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/privacyicon"
                    android:layout_weight="25"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:id="@+id/privacyicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/baskvill"
                    android:textColor="#2F54A3"
                    android:layout_weight="50"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/openbtn"
                    android:layout_weight="25"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/privacybtn"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:background="@drawable/listbg"
                android:layout_marginTop="@dimen/_15sdp">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/ratingsicon"
                    android:layout_weight="25"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:id="@+id/ratingicon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate this app"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/baskvill"
                    android:textColor="#2F54A3"
                    android:layout_weight="50"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/openbtn"
                    android:layout_weight="25"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/ratingbtn"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:background="@drawable/listbg"
                android:layout_marginTop="@dimen/_15sdp">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/abouticon"
                    android:layout_weight="25"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:id="@+id/abouticon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/baskvill"
                    android:textColor="#2F54A3"
                    android:layout_weight="50"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/openbtn"
                    android:layout_weight="25"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/aboutbtn"
                    />

            </LinearLayout>


        </LinearLayout>
<!--        <LinearLayout-->
<!--            android:id="@+id/banner_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/_15sdp"-->

<!--            android:orientation="vertical"-->

<!--            />-->
    </ScrollView>





</RelativeLayout>